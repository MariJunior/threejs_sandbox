{
  "extends": [
    "airbnb",
    "prettier"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "impliedStrict": true,
      "classes": true
    }
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "semi": [
      2,
      "always"
    ],
    "quotes": ["warn", "double"],
    "comma-dangle": ["warn", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "never",
      "exports": "always-multiline",
      "functions": "always-multiline"
    }],
    "consistent-return": "off",
    "indent": [
      "warn",
      2
    ],
    "import/no-extraneous-dependencies": "off"
  }
}